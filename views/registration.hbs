<div class="row">
<div class="col-md-6 col-md-offset-3">
<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title pull-left">Registration</h3>
    <button class="btn btn-default pull-right">&#x2717;</button>
    <div class="clearfix"></div>
  </div>
  <div class="panel-body">
  <form id="uber_registration" role="form" action="/registration">
    {{!-- <legend></legend> --}}
    <fieldset class="form-group">
      <label for="uber_forename">Forename:</label>
      <input type="text" class="form-control" id="uber_forename" name="uber_forename">
    </fieldset>
    <fieldset class="form-group">
      <label for="uber_surname">Surname:</label>
      <input type="text" class="form-control" id="uber_surname" name="uber_surname">
    </fieldset>
    <fieldset class="form-group">
      <label for="uber_email">Email:</label>
      <input type="email" class="form-control" id="uber_email" name="uber_email">
    </fieldset>    
    <fieldset class="form-group">
      <label for="uber_pwd1">Password:</label>
      <input type="password" class="form-control" id="uber_pwd1" name="uber_pwd1">
    </fieldset>
    <div class="form-group">
      <label for="uber_pwd2">Confirm Password:</label>
      <input type="password" class="form-control" id="uber_pwd2" name="uber_pwd2">
    </div>
    <fieldset class="checkbox">
      <label><input type="checkbox" id="uber_remember">Remember me</label>
    </fieldset>
    <fieldset class="form-group">
      <div class="col-md-12 text-center"> 
        <button type="submit" class="btn btn-primary btn-lg" id="uber_submit-registration">Submit</button>
      </div>
    </fieldset>
  </form>
  </div>
</div>
</div>
</div>