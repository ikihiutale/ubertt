<!DOCTYPE HTML> 
<html lang="en">
{{>head}}
<body>

  {{!-- ** HEADER ** --}}
  
  {{>header}}
  
  {{!-- ** CONTENT **  --}}
  
  <div class="container">
  <div class="row">
  
  {{!-- ** FLASH MESSAGES ** --}}

  {{#if error}}
    <div class="alert alert-warning alert-dismissible fade in" role="alert">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&#x2717;</span>
      </button>
      <strong>{{wrapText error}}</strong>
    </div>
  {{/if}}
  {{#if notice}}
    <div class="alert alert-warning" role="alert">
      <a class="close" data-dismiss="warning">&#x2717;</a>  
      <strong>{{wrapText notice}}</strong>
    </div>
  {{/if}}
  {{#if success}}
    <div class="alert alert-success" role="alert">  
      <a class="close" data-dismiss="success">&#x2717;</a>  
      <strong>{{wrapText success}}</strong>  
    </div>  
  {{/if}}
    {{!--
      {{log this}}
    --}}
    <div class="col-sm-12">
      {{{ body }}}
    </div>
  </div>
  </div>
  
  {{!-- ** FOOTER ** --}}
  
  {{>footer}}
</body>
</html>